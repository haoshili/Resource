<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/activity_vertical_margin"
                android:paddingBottom="12dip"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingTop="12dip">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="外星人笔记本电脑"
        android:textColor="@color/text_color"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:text="XC1003 白色"
        android:textSize="14dp"/>


    <RelativeLayout
        android:id="@+id/re_more"
        android:layout_width="@dimen/listviewItemHeight"
        android:layout_height="@dimen/listviewItemHeight"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="@dimen/icon_height"
            android:layout_height="@dimen/icon_height"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_more_vert_black_24dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="70dip"
        android:text="扫描：0"
        android:textSize="14dp"/>

</RelativeLayout>

