<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.invengo.resource.comresouce">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--首页-->
        <activity android:name=".activity.HomeActivity"></activity>

        <!--入库界面-->
        <activity android:name=".activity.storage.StorageActivity"></activity>

        <!--盘库界面-->
        <activity
            android:name=".activity.CheckActivity"
            android:launchMode="singleTask"></activity>

        <!--盘库详细操作-->
        <activity android:name=".activity.CheckDetailActivity"></activity>

        <!--数据下载界面-->
        <activity android:name=".activity.DownlandActivity"></activity>

        <!--设置界面-->
        <activity android:name=".activity.SettingActivity"></activity>

        <!--如何扫描-->
        <activity android:name=".activity.storage.StorageScanThingActivity"></activity>

        <!--资产详情-->
        <activity android:name=".activity.storage.ThingsDetailActivity"></activity>

        <!--添加扫描数据信息-->
        <activity android:name=".activity.storage.AddScanThingActivity"></activity>

        <!--测试界面-->
        <activity android:name=".test.TestActivity"></activity>

        <!--添加产品-->
        <activity android:name=".activity.AddProductActivity"></activity>

        <!--设置主界面功能显示-->
        <activity android:name=".activity.SettingHomeActivity"></activity>

        <!--编辑产品界面-->
        <activity android:name=".activity.EditProductActivity"></activity>

        <!--借出和归还操作-->
        <activity android:name=".activity.statue.BorrowActivity"></activity>

        <!--借出和归还操作-->
        <activity android:name=".activity.statue.BorrowDetailActivity"></activity>

        <!--添加备注信息界面-->
        <activity
            android:name=".activity.CheckNoteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>